%table.dynatable
  %caption.sr-only= #{term_for :groups}
  %thead
    %tr
      %th{:width => "20%"} #{term_for :group} Name
      %th{:style => "min-width: 200px"}= "#{current_course.student_term}s"
      %th{:style => "min-width: 200px"} #{term_for :assignments}
      %th{:style => "min-width: 250px"}
        %span.sr-only Action Buttons
  %tbody
    - groups.each do |group|
      %tr
        %td= link_to group.try(:name), group_path(group)
        %td
          - group.group_memberships.each do |gm|
            %li= link_to gm.student.name, student_path(gm.student)
        %td
          - group.assignment_groups.each do |ag|
            %li= link_to ag.assignment.try(:name), ag.try(:assignment)
        %td
          .right
            %ul.button-bar
              - if group.pending?
                %li= link_to decorative_glyph(:eye) + "Review #{term_for :group}", edit_group_path(id: group), class: "button"
              - else
                %li= link_to decorative_glyph(:edit) + "Edit #{term_for :group}", edit_group_path(id: group), class: "button"
              %li= link_to decorative_glyph(:trash) + "Delete", group_path(group), class: "button", data: { confirm: "This will delete the #{group.name} #{term_for :group} - are you sure?" }, :method => :delete
